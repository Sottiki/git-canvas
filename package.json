{
  "name": "git-canvas",
  "version": "0.1.0",
  "private": true,
  "description": "ðŸŽ¨ GitCanvas - Paint your Git history",
  "author": "Sottiki",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter @git-canvas/frontend dev",
    "dev:backend": "pnpm --filter @git-canvas/backend dev",
    "build": "pnpm --filter @git-canvas/* build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "pnpm --filter @git-canvas/* exec tsc --noEmit",
    "type-check:backend": "pnpm --filter @git-canvas/backend exec tsc --noEmit",
    "type-check:frontend": "pnpm --filter @git-canvas/frontend exec tsc --noEmit",
    "type-check:shared": "pnpm --filter @git-canvas/shared exec tsc --noEmit",
    "test": "pnpm --filter @git-canvas/* test",
    "test:backend": "pnpm --filter @git-canvas/backend test",
    "test:frontend": "pnpm --filter @git-canvas/frontend test",
    "test:ui:backend": "pnpm --filter @git-canvas/backend test:ui",
    "test:ui:frontend": "pnpm --filter @git-canvas/frontend test:ui",
    "test:coverage": "pnpm --filter @git-canvas/* test:coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10"
  }
}
